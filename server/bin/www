#!/usr/bin/env node

var app = require('../app');
var debug = require('debug')('server:server')('http');
var http = require('http');
var models = require("../models/index");
var room = require("../models/room");

const port = process.env.PORT || 5000;
app.set('port', port);

var server = http.createServer(app);

models.sequelize.sync({ force: true });

setTimeout(function() {
    var today = new Date();
    var time = today.getTime();
    models.room.create({ name: 'dummy room', averageValue: 1000 });
    models.employee.create({ firstName: 'John', lastName: 'Doe', dosis: '0.1' });
    models.employee.create({ firstName: 'Jane', lastName: 'Doe', dosis: '0.4' });
    models.stay.create({ startTime: time, endTime: time, dose: 0.12, employeeId: 1 });
    models.stay.create({ startTime: time, endTime: time, dose: 0.25, employeeId: 1 });
    models.stay.create({ startTime: time, endTime: time, dose: 0.03, employeeId: 2 });
    models.stay.create({ startTime: time, endTime: time, dose: 0.34, employeeId: 2 });
}, 2000);



var listener = app.listen(port, function() {
    console.log('Listening on port ' + listener.address().port);

});


function onError(error) {
    if (error.syscall !== 'listen') {
        throw error;
    }

    var bind = typeof port === 'string' ?
        'Pipe ' + port :
        'Port ' + port;

    // handle specific listen errors with friendly messages
    switch (error.code) {
        case 'EACCES':
            console.error(bind + ' requires elevated privileges');
            process.exit(1);
            break;
        case 'EADDRINUSE':
            console.error(bind + ' is already in use');
            process.exit(1);
            break;
        default:
            throw error;
    }
}

function onListening() {
    var addr = server.address();
    var bind = typeof addr === 'string' ?
        'pipe ' + addr :
        'port ' + addr.port;
    debug('Listening on ' + bind);
}